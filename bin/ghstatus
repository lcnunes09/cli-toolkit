#!/bin/bash
# ghstatus - Show Git repo status at a glance

set -euo pipefail

# â”€â”€ Defaults â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
VERBOSE=false
BASE_BRANCH=""
BASE_BRANCHES=("main" "master" "dev")

# â”€â”€ Parse CLI Arguments â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
for (( i=1; i<=$#; i++ )); do
  case "${!i}" in
    --verbose|-v) VERBOSE=true ;;
    --base)
      j=$((i + 1))
      BASE_BRANCH="${!j:-}"
      if [[ -z "$BASE_BRANCH" ]]; then
        echo "âŒ Missing value for --base"
        exit 1
      fi
      break
      ;;
  esac
done

# â”€â”€ Ensure we're inside a Git repo â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
if ! git rev-parse --git-dir > /dev/null 2>&1; then
  echo "ðŸš« Not inside a Git repository."
  exit 1
fi

CURRENT_BRANCH=$(git symbolic-ref --short HEAD)
UNCOMMITTED=$(git status --porcelain)
UNPUSHED_COUNT=$(git log --branches --not --remotes --oneline | wc -l | xargs)
REMOTE=$(git for-each-ref --format='%(upstream:short)' "$(git symbolic-ref -q HEAD)")

# â”€â”€ Determine base branch â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
TARGET_BRANCH="$BASE_BRANCH"
SHOW_UNMERGED=false

if [[ -n "$BASE_BRANCH" ]]; then
  SHOW_UNMERGED=true
elif [[ " ${BASE_BRANCHES[*]} " =~ " $CURRENT_BRANCH " ]]; then
  TARGET_BRANCH="$CURRENT_BRANCH"
  SHOW_UNMERGED=true
fi

# â”€â”€ Detect unmerged or orphan branches â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
UNMERGED_COUNT=0
UNMERGED_LIST=""

if [[ "$SHOW_UNMERGED" == true ]]; then
  ALL_BRANCHES=$(git for-each-ref --format='%(refname:short)' refs/heads/)
  FILTERED=$(echo "$ALL_BRANCHES" | grep -vE "^(${TARGET_BRANCH}|${BASE_BRANCHES[*]// /|})$")

  while read -r BRANCH; do
    [[ -z "$BRANCH" ]] && continue
    if ! git merge-base --is-ancestor "$BRANCH" "$TARGET_BRANCH" 2>/dev/null; then
      UNMERGED_LIST+="$BRANCH"$'\n'
    fi
  done <<< "$FILTERED"

  UNMERGED_COUNT=$(echo "$UNMERGED_LIST" | sed '/^\s*$/d' | wc -l | xargs)
fi

# â”€â”€ Output â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
echo "ðŸ§­ Branch: $CURRENT_BRANCH"
echo "ðŸ“Œ Uncommitted changes: $( [ -z "$UNCOMMITTED" ] && echo "no" || echo "yes" )"
echo "â¬†ï¸ Unpushed commits: $UNPUSHED_COUNT"
echo "ðŸ”— Remote tracking: ${REMOTE:-none}"

if [[ "$SHOW_UNMERGED" == true ]]; then
  echo "ðŸ“¦ Unmerged branches (into $TARGET_BRANCH): $UNMERGED_COUNT"
fi

if [[ "$VERBOSE" == true ]]; then
  echo ""
  echo "ðŸ“„ Unpushed commits:"
  git --no-pager log --branches --not --remotes --oneline || echo "âœ”ï¸ None"

  if [[ "$SHOW_UNMERGED" == true ]]; then
    echo ""
    echo "ðŸŒ¿ Unmerged branches into '$TARGET_BRANCH':"
    if [[ "$UNMERGED_COUNT" -gt 0 ]]; then
      echo "$UNMERGED_LIST"
    else
      echo "âœ”ï¸ None"
    fi
  fi
fi

echo ""
echo "âœ… ghstatus completed!"
