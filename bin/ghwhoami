#!/bin/bash
# ghwhoami - Display Git and GitHub identity

set -e

NAME=$(git config user.name)
EMAIL=$(git config user.email)
SSH_TEST=$(ssh -T git@github.com 2>&1 || true)

echo "ğŸ§‘ Git Name: $NAME"
echo "ğŸ“§ Git Email: $EMAIL"

if echo "$SSH_TEST" | grep -q "successfully authenticated"; then
  echo "ğŸ” GitHub SSH: âœ… Connected"
else
  echo "ğŸ” GitHub SSH: âŒ Not connected"
  echo "ğŸ“£ Message: $SSH_TEST"
fi

if [ -f ~/.ssh/id_ed25519.pub ]; then
  echo "ğŸ”‘ SSH Key: Found ~/.ssh/id_ed25519.pub"
else
  echo "ğŸ”‘ SSH Key: Not found"
fi

echo "âœ… ghwhoami completed!"
