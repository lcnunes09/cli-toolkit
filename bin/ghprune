#!/bin/bash
# ghprune - Delete local branches that no longer exist on remote

set -e

echo "ğŸ“¡ Fetching latest from origin..."
git fetch -p
git remote prune origin

DELETED=$(git branch -vv | grep ': gone]' | awk '{ print $1 }')

if [[ -z "$DELETED" ]]; then
  echo "âœ… No stale branches to delete."
  exit 0
fi

echo "ğŸ—‘ï¸ Deleting stale branches:"
for branch in $DELETED; do
  echo "ğŸ”» $branch"
  git branch -D "$branch"
done

echo "âœ… ghprune completed!"
